@using SKBKontur.Treller.WebApplication.Implementation.React
@using SKBKontur.Treller.WebApplication.Implementation.Webpack

@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
}

@section HeadCss
{
    @Styles.Render("~/bundles/reactLayout")
    @RenderSection("HeadCss", false)
}

@RenderBody()

@section FooterScripts
{
    @Webpack.Scripts(WebpackEntries.Manifest)
    @Webpack.Scripts(WebpackEntries.Vendor)
    @RenderSection("FooterScripts", false)
    @HtmlReact.Init()
}